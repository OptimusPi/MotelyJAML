name: Example With Defaults
description: Example filter demonstrating the defaults feature
author: Claude Code
dateCreated: 2025-01-28T00:00:00Z

# Configure defaults for this filter
defaults:
  # Only check antes 1-3 by default (saves search time!)
  antes: [1, 2, 3]

  # Check all pack slots (auto-adjusted for ante 1)
  packSlots: [0, 1, 2, 3, 4, 5]

  # Check all shop slots (auto-adjusted for ante 1)
  shopSlots: [0, 1, 2, 3, 4, 5]

  # Default score for should clauses
  score: 10

must:
  # This voucher will use defaults.antes = [1, 2, 3]
  - voucher: Telescope

  # This one overrides with specific antes
  - voucher: Observatory
    antes: [2]

should:
  # These will use defaults.score = 10
  - joker: Blueprint
  - joker: Brainstorm

  # This one overrides the score
  - joker: Perkeo
    score: 50

mustNot: []
